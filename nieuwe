#!/usr/bin/env bash
set -euo pipefail

# create_site.sh
# Maakt de sitebestanden aan, checkt/maakt jurgen branch en pusht naar origin/jurgen.
# Run in de root van je lokale repository.

# Safety: require clean working tree
if [ -n "$(git status --porcelain)" ]; then
  echo "Er zijn onopgeslagen wijzigingen. Commit of stash ze eerst."
  git status --porcelain
  exit 1
fi

BRANCH="jurgen"
REMOTE="origin"

# Checkout or create branch
if git rev-parse --verify "$BRANCH" >/dev/null 2>&1; then
  git checkout "$BRANCH"
else
  git checkout -b "$BRANCH"
fi

echo "Schrijf sitebestanden..."

